<header class="main-header" id="main-header">

	<div class="container-fluid">

		<div class="row">

			<div class="col-md-3">

				<a href="{{ site.url }}" rel="home">
					<img class="main-header__logo" src="{{ theme.link }}/assets/img/logo.svg" alt="{{ site.name }}" role="banner">
				</a>

			</div><!-- /.col-md-3 -->

			<div class="col-md-9">

				{% if main_menu %}
					<nav class="main-menu hidden-xs" role="navigation">
						<ul class="main-menu__list">
							{% for item in main_menu.items %}
								<li class="main-menu__item {{ item.classes|join(' ') }}">
									<a class="main-menu__link" href="{{ item.url }}">
										{{ item.title }}
									</a>
								</li>
							{% endfor %}
						</ul>
					</nav><!-- /.main-header__nav -->
				{% endif %}

				<button class="mobile-trigger visible-xs-inline-block" id="mobileTrigger" aria-controls="mobileMenu">
					<i class="fa fa-bars" aria-hidden="true"></i>
					<span class="sr-only">Mobile Menu</span>
				</button>

			</div><!-- /.col-md-9 -->

		</div><!-- /.row -->

	</div><!-- /.container-fluid -->

</header><!-- /#main-header.main-header -->